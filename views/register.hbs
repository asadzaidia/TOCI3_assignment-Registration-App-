  crossorigin="anonymous"></script>

        <title>SignUp!</title>
    </head>

    <body>
        
        <div class="container" style="margin-top:50px;">
            <div class="row">
                <center><h2>SignUp!</h2></center>
                <hr class="style">
                <br>
                <br>
                <div class="col-md-5 col-md-offset-3">
                    <form action="/" method="post">
                      
                  <div class="form-group">
                    {{#if msg}}
                        <div class="alert alert-success" role="alert">
                       
                        <strong>{{msg}}</strong>
                         </div>
                    {{/if}}

                      <div class="form-group">
                            <label for="un">User Name:</label>
                            <input type="text" id="un" name="uname" class="form-control style" required>
                        </div>
                         <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" id="email" name="email" class="form-control style" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input type="password" id="password" name="password" class="form-control style" required>
                        </div>

                        <button type="submit" name="submit" class="btn btn-info btn-lg style">Register</button>

                        
                    </form>
                </div>
            </div>
        </div>

    </body>
</html>



